<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
    xmlns:f="sap.ui.layout.form"
>
    <Dialog title="Contact Information">
        <content>
            <f:SimpleForm>
                <f:content>
                    <Label text="Name" />
                    <Text text="Doglas Oliveira" />
                    <Label text="Email" />
                    <Text text="doglas@email.com" />
                    <Label text="Country Based" />
                    <Text text="Portugal" />
                </f:content>
            </f:SimpleForm>
        </content>
        <endButton>
            <Button
                text="Close"
                press="onCloseContact"
            />
        </endButton>
    </Dialog>
</c:FragmentDefinition>