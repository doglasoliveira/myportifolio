<c:FragmentDefinition
    xmlns="sap.m"
    xmlns:c="sap.ui.core"
>
    <Popover
        showHeader="false"
        id="myPopover"
        placement="Bottom"
    >
        <List
            mode="SingleSelectMaster"
            itemPress="onContactPress"
            class="sapUiTinyMargin"
            width="90%"
        >
            <items>
                <CustomListItem>
                    <Link
                        href="https://www.linkedin.com/in/doglasoliveira/"
                        target="_Blank"
                        text="Linkedin"
                    />
                </CustomListItem>
                <CustomListItem>
                    <Link
                        text="CV Download"
                        href="./file/DOGLASOLIVEIRA2023.docx"
                    />
                </CustomListItem>
                <CustomListItem type="Active">
                    <Text text="Contact" />
                </CustomListItem>
            </items>
        </List>
    </Popover>
</c:FragmentDefinition>